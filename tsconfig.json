{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "rootDir": "src",
    "outDir": "dist",
    
    "baseUrl": "src",
    "paths": {
        "utils/": ["utils/"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}